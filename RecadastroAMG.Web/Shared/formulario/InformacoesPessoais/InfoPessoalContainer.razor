@using RecadastroAMG.Web.Shared.formulario.InformacoesPessoais

<div class="card my-3">
    <div class="m-3">
        <ContainerTitle PathImage="@desenhoInfopessoal" Titulo="Informações Pessoais" />
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-lg-2">
                <label for="inputEmail4" class="form-label">CPF:</label>


                <EditForm EditContext="EditContext">
                    <InputText @bind-Value="oi.oi"></InputText>
                </EditForm>
         

                <input type="text" class="form-control" id="cpf" placeholder="Digite seu CPF" required>
            </div>
            <div class="col-md-6 col-lg-2">
