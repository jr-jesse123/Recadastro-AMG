                <input type="date" class="form-control" id="inlineFormInputGroupUsername" required>
            </div>
            <div class="col-md-6 col-lg-2">
                <label for="inputAddress2" class="form-label">Ano de Formatura: </label>
                <select class="form-select" aria-label="Default select example">
                    <option value="2020">2020</option>
                </select>
            </div>

            <div class="col-md-6 col-lg-2">
                <label for="inputAddress2" class="form-label">Especialidade:</label>
                <select class="form-select" aria-label="Default select example">
                    <option value="">Acupuntura</option>
                </select>
            </div>
            <div class="col-md-6 col-lg-2">
                <label for="inputAddress2" class="form-label">Sexo:</label>
                <select class="form-select" aria-label="Default select example">
                    <option value="0">Escolha</option>
                    <option value="1">Masculino</option>
                    <option value="2">Feminino</option>
                </select>
            </div>
        </div>

    </div>
</div>

